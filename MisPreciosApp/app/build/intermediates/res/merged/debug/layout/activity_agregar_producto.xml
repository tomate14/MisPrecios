<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maxi.mispreciosapp.AgregarProducto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CodBarra"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtCodBarra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteY="7dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="62dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supermercado:"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Spinner
        android:id="@+id/spinnerSuper"
        android:layout_width="214dp"
        android:layout_height="28dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/IMPORTE"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="25dp"
        tools:layout_editor_absoluteY="231dp"
        tools:layout_editor_absoluteX="136dp" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="214dp"
        android:layout_height="45dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/txtCodBarra" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="55dp"
        android:background="@color/colorPrimary"
        android:text="Aceptar"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSuper" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importe"
        tools:layout_editor_absoluteX="14dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/IMPORTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="74dp" />

</android.support.constraint.ConstraintLayout>
